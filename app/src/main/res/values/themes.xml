<resources>
    <!-- Allows us to override platform level specific attributes in their
         respective values-vXX folder. -->
    <style name="Platform.Theme.DiscountDetective" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.DiscountDetective" parent="Platform.Theme.DiscountDetective">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
</resources>